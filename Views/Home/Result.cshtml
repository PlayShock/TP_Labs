@{
    ViewData["Title"] = "Результат операции";
}

<div class="result-page-container">
    <h2>Результат последней операции</h2>
    
    <div class="result-card">
        @if (ViewBag.FormattedOperation != null && ViewBag.FormattedResult != null)
        {
            <div class="operation">
                <h3>Операция:</h3>
                <p>@ViewBag.FormattedOperation равно @ViewBag.FormattedResult</p>
            </div>
        }
        else
        {
            <p class="no-data">Нет данных о последней операции.</p>
        }
    </div>
    
    <div class="back-link">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Вернуться к калькулятору</a>
    </div>
</div>

<style>
    .result-page-container {
        max-width: 500px;
        margin: 50px auto;
        text-align: center;
    }
    
    .result-card {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        margin: 20px 0;
    }
    
    .operation {
        padding: 15px;
        background-color: #e9ecef;
        border-radius: 5px;
    }
    
    .operation p {
        font-size: 18px;
        margin: 0;
    }
    
    .no-data {
        color: #6c757d;
        font-style: italic;
    }
    
    .back-link {
        margin-top: 20px;
    }
</style> 